---
import '../styles/global.css';
import MobileNavigation from '../components/MobileNavigation.astro';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'AI Consulting | Enterprise Solutions', 
  description = 'Transform your business with cutting-edge AI consulting services. Expert guidance in machine learning, natural language processing, and predictive analytics.'
} = Astro.props;

// Get current path for active navigation state
const currentPath = Astro.url.pathname;

// Check if services are enabled
const enableServices = import.meta.env.ENABLE_SERVICES === 'true';

// Check if current page is a service page and should be noindexed
const isServicePage = currentPath.startsWith('/services');
const shouldNoindex = isServicePage && !enableServices;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  {shouldNoindex && <meta name="robots" content="noindex, nofollow">}
  <title>{title}</title>
  
  <!-- Favicon - Comprehensive Support for All Platforms -->
  <link rel="icon" type="image/x-icon" sizes="32x32" href="/favicon.ico">
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon.ico">
  <link rel="manifest" href="/site.webmanifest">
  <meta name="theme-color" content="#6BC443">
  <meta name="msapplication-TileColor" content="#6BC443">
  <meta name="msapplication-config" content="/browserconfig.xml">
  
  <!-- Google Fonts - Barlow, Barlow Condensed & Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;500;600;700;800&family=Barlow+Condensed:wght@400;500;600;700;800&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- PostHog Analytics -->
  <script>
    import { initPostHog, trackPageView } from '../lib/posthog';
    
    // Initialize PostHog on page load
    initPostHog();
    
    // Track initial page view
    trackPageView();
    
    // Track page views on route changes (for Astro's view transitions)
    document.addEventListener('astro:page-load', () => {
      trackPageView();
    });
  </script>
</head>
<body>
  <header>
    <nav class="nav-bar">
      <div class="container">
        <div class="nav-content">
          <a href="/" class="logo">
            <img src="/logo.png" alt="Unravel - AI Consulting" class="logo-img">
          </a>
          <ul class="nav-links">
            <li><a href="/">Home</a></li>
            {enableServices && (
              <li class="nav-dropdown">
                <button class="nav-dropdown-trigger" aria-expanded="false">
                  Services
                  <svg class="dropdown-arrow" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="6 9 12 15 18 9"></polyline>
                  </svg>
                </button>
                <div class="nav-dropdown-menu">
                  <a href="/services" class="dropdown-item">All Services</a>
                  <a href="/services/prototype-to-production" class="dropdown-item">Prototype to Production</a>
                  <a href="/services/ai-implementation" class="dropdown-item">AI Implementation</a>
                  <a href="/services/ai-consulting" class="dropdown-item">AI Consulting</a>
                  <a href="/services/cost-optimization" class="dropdown-item">Cost Optimization</a>
                </div>
              </li>
            )}
            <li><a href="/blog">Blog</a></li>
            <li><a href="/talks">Talks</a></li>
            <li><a href="https://tally.so/r/EkqvqN" target="_blank" rel="noopener noreferrer">Contact</a></li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <main>
    <slot />
    
    <!-- Mobile Navigation - Thumb-Friendly Bottom Bar -->
    <MobileNavigation currentPath={currentPath} enableServices={enableServices} />
    
    <footer>
      <div class="container">
        <div class="footer-content">
          <div class="footer-section">
            <h4>Quick Links</h4>
            <ul class="footer-links">
              <li><a href="/">Home</a></li>
              {enableServices && <li><a href="/services">Services</a></li>}
              <li><a href="/blog">Blog</a></li>
              <li><a href="/talks">Talks</a></li>
              <li><a href="https://cal.com/kapilr/unravel" target="_blank" rel="noopener noreferrer">Contact</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h4>Contact</h4>
            <p class="text-muted">contact@unravel.tech</p>
          </div>
        </div>
        <div class="footer-bottom">
          <p class="text-muted">&copy; 2025 Unravel. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </main>
</body>
</html>

<style>
  /* Header & Navigation - Transparent with Blur */
  header {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    transition: background 0.3s ease, box-shadow 0.3s ease;
  }

  /* Add subtle shadow on scroll - handled via JS if needed */
  header:hover {
    background: rgba(255, 255, 255, 0.92);
  }

  .nav-bar {
    padding: var(--spacing-lg) 0;
  }

  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .logo:hover {
    text-decoration: none;
    opacity: 0.85;
    transform: translateY(-1px);
  }

  .logo-img {
    height: 32px;
    width: auto;
    display: block;
    object-fit: contain;
  }

  @media (min-width: 768px) {
    .logo-img {
      height: 36px;
    }
  }

  @media (min-width: 1024px) {
    .logo-img {
      height: 40px;
    }
  }

  .nav-links {
    display: flex;
    gap: var(--spacing-md);
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .nav-links li {
    display: flex;
    align-items: center;
  }

  .nav-links a {
    color: var(--color-text-secondary);
    font-weight: 500;
    transition: all var(--transition-base);
    padding: 0.625rem 0.875rem;
    border-radius: var(--radius-sm);
    display: inline-block;
    white-space: nowrap;
  }

  .nav-links a:hover {
    color: var(--color-primary-600);
    background: var(--color-primary-100);
    text-decoration: none;
  }

  /* Mobile Navigation */
  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
  }

  /* Main Content - Normal Scrolling */
  main {
    padding-top: 80px; /* Space for fixed header */
  }

  @media (min-width: 768px) {
    main {
      padding-top: 88px; /* Larger header on tablets */
    }
  }

  @media (min-width: 1024px) {
    main {
      padding-top: 92px; /* Larger header on desktop */
    }
  }

  /* Mobile: Add bottom padding to account for mobile navigation */
  @media (max-width: 768px) {
    main {
      padding-bottom: 80px; /* 60px nav + 20px breathing room */
    }
  }

  /* Footer - Transparent with Subtle Background */
  footer {
    background: rgba(33, 37, 41, 0.95);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    color: #C9D1D9;
    padding: var(--spacing-md) 0;
    min-height: auto;
    height: auto;
    margin-top: auto;
  }
  
  footer .container {
    width: 100%;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-lg);
  }

  .footer-section {
    flex: 0 1 auto;
  }

  .footer-section h4 {
    color: #C9D1D9;
    margin-bottom: 0;
    font-size: var(--text-sm);
    font-weight: 600;
  }

  .footer-section p {
    margin-bottom: 0;
    font-size: var(--text-xs);
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    align-items: center;
  }

  .footer-links li {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .footer-links li:not(:last-child)::after {
    content: '|';
    color: #8B949E;
  }

  .footer-links a {
    color: #C9D1D9;
    transition: color var(--transition-base);
    font-size: var(--text-xs);
  }

  .footer-links a:hover {
    color: var(--color-primary-400);
    text-decoration: none;
  }

  .footer-bottom {
    display: none;
  }

  footer .text-muted {
    color: #8B949E;
  }

  /* Mobile Footer - Hidden on mobile */
  @media (max-width: 768px) {
    footer {
      display: none;
    }
  }

  /* Desktop Dropdown Menu - Enhanced for Larger Views */
  .nav-dropdown {
    position: relative;
  }

  .nav-dropdown-trigger {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    background: none;
    border: none;
    color: var(--color-text-secondary);
    font-weight: 500;
    font-size: 1rem;
    cursor: pointer;
    padding: 0.625rem 0.875rem;
    border-radius: var(--radius-sm);
    transition: all var(--transition-base);
    font-family: inherit;
    white-space: nowrap;
  }

  .nav-dropdown-trigger:hover {
    color: var(--color-primary-600);
    background: var(--color-primary-100);
  }

  .nav-dropdown-trigger:focus {
    outline: none;
    box-shadow: 0 0 0 2px var(--color-neutral-000), 0 0 0 4px var(--color-primary-500);
  }

  .dropdown-arrow {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    width: 18px;
    height: 18px;
  }

  .nav-dropdown-trigger[aria-expanded="true"] {
    color: var(--color-primary-600);
    background: var(--color-primary-100);
  }

  .nav-dropdown-trigger[aria-expanded="true"] .dropdown-arrow {
    transform: rotate(180deg);
  }

  .nav-dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    margin-top: 0.75rem;
    min-width: 280px;
    background: var(--color-neutral-000);
    border: 1px solid rgba(14, 159, 188, 0.15);
    border-radius: var(--radius-lg);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12), 0 2px 8px rgba(14, 159, 188, 0.08);
    padding: 0.75rem;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-12px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1000;
    backdrop-filter: blur(10px);
  }

  .nav-dropdown-trigger[aria-expanded="true"] + .nav-dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-item {
    display: block;
    padding: 0.875rem 1.125rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    font-size: 0.9375rem;
    font-weight: 500;
    border-radius: var(--radius-md);
    position: relative;
    overflow: hidden;
  }

  .dropdown-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 0;
    background: var(--unravel-green);
    border-radius: 0 2px 2px 0;
    transition: height 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .dropdown-item:hover {
    background: var(--color-green-100);
    color: var(--color-primary-700);
    text-decoration: none;
    transform: translateX(4px);
    padding-left: 1.25rem;
  }

  .dropdown-item:hover::before {
    height: 70%;
  }

  .dropdown-item:active {
    transform: translateX(2px);
  }

  .dropdown-item:first-child {
    font-weight: 600;
    color: var(--color-text-primary);
    border-bottom: 2px solid var(--color-border);
    margin-bottom: 0.5rem;
    padding-bottom: 0.875rem;
    background: var(--color-green-100);
  }

  .dropdown-item:first-child:hover {
    background: var(--color-green-200);
    color: var(--color-primary-700);
  }

  .dropdown-item:first-child::before {
    height: 0;
  }

  /* Enhanced dropdown for larger screens */
  @media (min-width: 1024px) {
    .nav-dropdown-menu {
      min-width: 320px;
      padding: 1rem;
    }

    .dropdown-item {
      padding: 1rem 1.25rem;
      font-size: 1rem;
    }

    .dropdown-item:first-child {
      padding-bottom: 1rem;
      margin-bottom: 0.75rem;
    }
  }

  /* Smooth animation for dropdown appearance */
  @keyframes dropdown-appear {
    from {
      opacity: 0;
      transform: translateY(-12px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .nav-dropdown-trigger[aria-expanded="true"] + .nav-dropdown-menu {
    animation: dropdown-appear 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>

<script>
  import { trackNavigationClick, trackDropdownOpened, trackEmailClick, trackScrollDepth, trackTimeOnPage, trackExternalLinkClick } from '../lib/posthog';

  // Desktop dropdown menu functionality
  function initDesktopDropdown() {
    const dropdownTrigger = document.querySelector('.nav-dropdown-trigger');
    const dropdownMenu = document.querySelector('.nav-dropdown-menu');

    if (!dropdownTrigger || !dropdownMenu) return;

    // Toggle dropdown on click
    dropdownTrigger.addEventListener('click', (e) => {
      e.stopPropagation();
      const isExpanded = dropdownTrigger.getAttribute('aria-expanded') === 'true';
      dropdownTrigger.setAttribute('aria-expanded', !isExpanded);
      
      // Track dropdown opened
      if (!isExpanded) {
        trackDropdownOpened('Services');
      }
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', () => {
      dropdownTrigger.setAttribute('aria-expanded', 'false');
    });

    // Close on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        dropdownTrigger.setAttribute('aria-expanded', 'false');
        dropdownTrigger.focus();
      }
    });

    // Prevent closing when clicking inside dropdown
    dropdownMenu.addEventListener('click', (e) => {
      e.stopPropagation();
    });
  }

  // Track navigation clicks
  function initNavigationTracking() {
    // Track header navigation clicks
    document.querySelectorAll('.nav-links a').forEach(link => {
      link.addEventListener('click', (e) => {
        const target = e.currentTarget as HTMLAnchorElement;
        trackNavigationClick(target.textContent || '', target.href, 'header');
      });
    });

    // Track dropdown menu clicks
    document.querySelectorAll('.dropdown-item').forEach(link => {
      link.addEventListener('click', (e) => {
        const target = e.currentTarget as HTMLAnchorElement;
        trackNavigationClick(target.textContent || '', target.href, 'dropdown');
      });
    });

    // Track footer navigation clicks
    document.querySelectorAll('.footer-links a').forEach(link => {
      link.addEventListener('click', (e) => {
        const target = e.currentTarget as HTMLAnchorElement;
        trackNavigationClick(target.textContent || '', target.href, 'footer');
      });
    });

    // Track email clicks
    document.querySelectorAll('a[href^="mailto:"]').forEach(link => {
      link.addEventListener('click', (e) => {
        const target = e.currentTarget as HTMLAnchorElement;
        const email = target.href.replace('mailto:', '');
        const location = target.closest('header') ? 'header' : 
                        target.closest('footer') ? 'footer' : 'content';
        trackEmailClick(email, location);
      });
    });

    // Track external links
    document.querySelectorAll('a[href^="http"]').forEach(link => {
      const target = link as HTMLAnchorElement;
      if (!target.href.includes(window.location.hostname)) {
        link.addEventListener('click', () => {
          const location = target.closest('header') ? 'header' : 
                          target.closest('footer') ? 'footer' : 'content';
          trackExternalLinkClick(target.href, target.textContent || '', location);
        });
      }
    });
  }

  // Track scroll depth
  function initScrollTracking() {
    const milestones = [25, 50, 75, 100];
    const reached = new Set<number>();

    function checkScrollDepth() {
      const scrollPercent = (window.scrollY + window.innerHeight) / document.body.scrollHeight * 100;
      
      milestones.forEach(milestone => {
        if (scrollPercent >= milestone && !reached.has(milestone)) {
          reached.add(milestone);
          trackScrollDepth(milestone as 25 | 50 | 75 | 100);
        }
      });
    }

    window.addEventListener('scroll', checkScrollDepth, { passive: true });
  }

  // Track time on page
  function initTimeTracking() {
    const startTime = Date.now();
    
    // Track time when user leaves or switches tabs
    function trackTime() {
      const timeSpent = Math.floor((Date.now() - startTime) / 1000);
      if (timeSpent >= 10) { // Only track if spent at least 10 seconds
        trackTimeOnPage(timeSpent);
      }
    }

    window.addEventListener('beforeunload', trackTime);
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) {
        trackTime();
      }
    });
  }

  // Initialize all tracking
  function initTracking() {
    initDesktopDropdown();
    initNavigationTracking();
    initScrollTracking();
    initTimeTracking();
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTracking);
  } else {
    initTracking();
  }

  // Re-initialize after navigation
  document.addEventListener('astro:page-load', initTracking);
</script>
